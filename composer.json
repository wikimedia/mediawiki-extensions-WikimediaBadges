{
	"name": "wikibase/wikimedia-badges",
	"description": "Extension which contains default themes to display badges on Wikimedia projects",
	"type": "mediawiki-extension",
	"version": "1.0.0",
	"keywords": [
		"Wikidata",
		"Wikibase"
	],
	"homepage": "https://github.com/wmde/WikimediaBadges",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Bene*",
			"email": "benestar.wikimedia@gmail.com",
			"homepage": "https://www.wikidata.org/wiki/User:Bene*",
			"role": "Developer"
		}
	],
	"support": {
		"irc": "irc://irc.freenode.net/wikidata"
	},
	"require": {
		"php": ">=5.5.9"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "33.0.0",
		"mediawiki/mediawiki-phan-config": "0.10.4",
		"mediawiki/minus-x": "1.1.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0"
	},
	"scripts": {
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"test": [
			"composer validate --no-interaction",
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s",
			"minus-x check ."
		]
	}
}
